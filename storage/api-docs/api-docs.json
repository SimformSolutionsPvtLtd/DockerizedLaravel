            "get": {
                "tags": [
                    "Profile"
                ],
                "summary": "Profile",
                "operationId": "rofile",
                "responses": {
                    "200": {
                        "description": "User profile found successfully.",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "201": {
                        "description": "User profile found successfully.",
